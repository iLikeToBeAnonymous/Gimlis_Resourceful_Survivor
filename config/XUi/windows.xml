<Config>
	<append xpath="/windows">
	<!-- From post by Clockwork Orange @ https://community.7daystodie.com/topic/9304-adding-custom-workstations/-->
		<window name="windowToolsWorkstationNomadsGMLI" width="228" height="121" panel="Right" cursor_area="true" > <!-- This color code works in A18.4, but it's shorter to do the new way -->
			<panel style="header.panel">			
				<sprite style="header.icon" sprite="ui_game_symbol_pen"/>
				<label style="header.name" text="TOOLS" text_key="xuiTools" /> <!-- "xuiTools" is a key in vanilla Localization.txt -->
			</panel>

			<rect name="content" depth="0" pos="0,-46" height="75" disablefallthrough="true" on_press="true">

				<grid name="inventory" rows="1" cols="1" pos="3,-3" cell_width="75" cell_height="75" controller="WorkstationToolGrid" repeat_content="true" allow_sort_order="false" required_tools="toolGeometrySet" required_tools_only="true">
					<required_item_stack name="0"/>
				</grid>		
			</rect>
		</window>
	</append>
</Config>